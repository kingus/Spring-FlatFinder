<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="Theme.FlatFinder">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="common_button" parent="TextAppearance.AppCompat.Widget.Button.Colored">
        <item name="fontFamily">@font/noto_sans_bold</item>
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">@dimen/standard_margin</item>
    </style>

    <style name="common_button_expanded" parent="common_button">
        <item name="android:minWidth">300dp</item>
        <item name="android:minHeight">65dp</item>
    </style>

    <style name="common_edit_text" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:background">@drawable/rounded_rectangle</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="android:layout_margin">@dimen/standard_margin_0.5x</item>
    </style>

    <style name="common_edit_text_expanded" parent="common_edit_text">
        <item name="android:minWidth">300dp</item>
        <item name="android:minHeight">55dp</item>
    </style>

    <style name="main_app_name">
        <item name="android:padding">@dimen/standard_margin_3x</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowRadius">50</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/app_name_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="common_text_bold">
        <item name="fontFamily">@font/noto_sans_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="common_text">
        <item name="fontFamily">@font/noto_sans</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="common_line">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginRight">@dimen/standard_margin_4x</item>
        <item name="android:layout_marginLeft">@dimen/standard_margin_4x</item>
    </style>


    <style name="small_icon">
        <item name="android:layout_width">@dimen/small_icon</item>
        <item name="android:layout_height">@dimen/small_icon</item>
        <item name="android:layout_margin">@dimen/standard_margin</item>
    </style>

</resources>

