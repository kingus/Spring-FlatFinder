<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.FlatFinder.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">10dp</item>
        <item name="android:shape">rectangle</item>
        <item name="android:textSize">16sp</item>
        <item name="android:radius">5dp</item>
        <item name="borderWidth">1dp</item>
    </style>

    <style name="AppTheme" parent="Theme.FlatFinder">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
</resources>

