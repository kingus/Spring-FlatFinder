<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/offerLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/standard_margin_2x"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foreground="@drawable/rectangle_background"
        android:scaleType="centerCrop"
        android:src="@drawable/flat">

        <ImageView
            android:id="@+id/offerImage"
            android:layout_width="360dp"
            android:layout_height="210dp"
            android:foreground="@drawable/rectangle_background"
            android:scaleType="centerCrop"
            android:src="@drawable/flat" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="210dp"
            android:layout_gravity="end|bottom"
            android:gravity="bottom"
            android:orientation="vertical"
            android:background="@color/translucent_black"
            android:padding="@dimen/standard_margin">

            <ImageView
                android:id="@+id/editImageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:src="@drawable/ic_pencil" />

            <ImageView
                android:id="@+id/heartImageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="@dimen/standard_margin"
                android:layout_marginBottom="@dimen/standard_margin"
                android:layout_weight="1"
                android:src="@drawable/ic_favourite" />

            <ImageView
                android:id="@+id/emailImageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:src="@drawable/ic_email" />

        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/standard_margin_3x"
        android:orientation="vertical">

        <TextView
            android:id="@+id/offerTitleTextView"
            style="@style/common_text_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/common_font_size_medium" />

        <TextView
            android:id="@+id/priceTextView"
            style="@style/common_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/common_font_size_small" />

        <TextView
            android:id="@+id/districtTextView"
            style="@style/common_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/common_font_size_small" />

    </LinearLayout>

</LinearLayout>